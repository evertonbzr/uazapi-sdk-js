{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true, // Emite arquivos de declaração (.d.ts)
    "declarationMap": true, // Opcional: emite sourcemaps para declarações
    "emitDeclarationOnly": true, // Opcional: emite apenas arquivos de declaração
    "outDir": "./dist" // Diretório de saída para os arquivos compilados
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}